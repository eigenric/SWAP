{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Make pdf",
      "type": "shell",
      "command": "pandoc",
      "args": [
        "${file}",
        "--template",
        "eisvogel",
        "--listings",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.pdf"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "never",
        "panel": "dedicated"
      },
    }
  ]
}
